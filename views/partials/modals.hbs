<!-- Modal login -->
<div class="modal fade" id="loginAccount">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
        <h4 class="modal-title">Đăng nhập</h4>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <form id="loginForm">
          <div class="mb-3 mt-3">
            <label for="email" class="form-label">Email:</label>
            <input
              type="email"
              class="form-control form-control-lg"
              id="email"
              placeholder="Nhập email"
              name="email"
            />
          </div>
          <div class="mb-3">
            <label for="pwd" class="form-label">Mật khẩu:</label>
            <input
              type="password"
              class="form-control form-control-lg"
              id="pwd"
              placeholder="Nhập password"
              name="pswd"
            />
          </div>
          <div class="form-check mb-3 login-form">
            <label class="form-check-label">
              <input class="form-check-input" type="checkbox" name="remember" />
              Lưu tài khoản
            </label>
            <a href="#" class="forgotpw"> Quên mật khẩu? </a>
          </div>
          <button type="submit" class="btnlogin btn btn-success btn-lg">
            <h4> Đăng nhập </h4>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- END MODAL -->

<!-- Modal register -->
<div class="modal fade" id="registerAccount">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
        <h4 class="modal-title">Tài khoản</h4>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <form action="/sign-up" method="POST">
          <div class="mb-3 mt-3">
            <label for="name" class="form-label">Tên:</label>
            <input
              type="text"
              class="form-control form-control-lg"
              id="name"
              placeholder="Nhập tên"
              name="name"
            />
          </div>
          <div class="mb-3 mt-3">
            <label for="email" class="form-label">Email:</label>
            <input
              type="email"
              class="form-control form-control-lg"
              id="email"
              placeholder="Nhập email"
              name="email"
            />
          </div>

          <div class="mb-3">
            <label for="pwd" class="form-label">Mật khẩu:</label>
            <input
              type="password"
              class="form-control form-control-lg"
              id="pwd"
              placeholder="Nhập password"
              name="password"
            />
          </div>
          <!-- Modal footer -->

          <div class="modal-footer">
            <button type="submit" class="btn btn-success btn-lg">Đăng kí</button>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>
<!-- END MODAL -->